<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- Alias 설정 -->
	<typeAliases>
		<typeAlias type="com.moviehub.biz.movie.MovieVO" alias="movie"/>
		<typeAlias type="com.moviehub.biz.movie.MovieGenreVO" alias="genre"/>
		<typeAlias type="com.moviehub.biz.user.UserVO" alias="user"/>
		<typeAlias type="com.moviehub.biz.user.UserDetailVO" alias="detail"/>
		<typeAlias type="com.moviehub.biz.comment.CommentVO" alias="comment"/>
		<typeAlias type="com.moviehub.biz.comment.CurCommentVO" alias="curComment" />
		<typeAlias type="com.moviehub.biz.rating.RatingVO" alias="rating" />
		<typeAlias type="com.moviehub.biz.reply.ReplyVO" alias="reply"/>
		<typeAlias type="com.moviehub.biz.reply.CurReplyVO" alias="curReply"/>
 	</typeAliases>

	<!-- Sql Mapper 설정  -->
	<mappers>
		<mapper resource="mappings/user-mapping.xml" />
		<mapper resource="mappings/movie-mapping.xml" />
		<mapper resource="mappings/comment-mapping.xml" />
		<mapper resource="mappings/rating-mapping.xml" />
		<mapper resource="mappings/reply-mapping.xml" />
	</mappers>
</configuration>